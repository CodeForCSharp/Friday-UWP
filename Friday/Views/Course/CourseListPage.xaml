        <Style x:Key="CourseListStyle" TargetType="ListView">
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <Grid Height="70">
                            <StackPanel>
                                <TextBlock Foreground="Black" FontWeight="Bold" Text="{Binding name}"></TextBlock>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Margin="0,0,5,0" Width="15" Height="15" FontFamily="Segoe MDL2 Assets" Text="&#xE77B;" Foreground="#FF65E271"></TextBlock>
                                    <TextBlock Foreground="Black" FontSize="12">老师:<Run Text="{Binding teacher}"></Run></TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Margin="0,0,5,0" Width="15" Height="15" FontFamily="Segoe MDL2 Assets" Text="&#xE81D;" Foreground="#FF65E271"></TextBlock>
                                    <TextBlock Foreground="Black" FontSize="12">教室:<Run Text="{Binding classroom}"></Run></TextBlock>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Margin="0,0,5,0" Width="15" Height="15" FontFamily="Segoe MDL2 Assets" Text="&#xE787;" Foreground="#FF65E271"></TextBlock>
                                    <TextBlock Foreground="Black" FontSize="12">时间:<Run Text="{Binding time}"></Run></TextBlock>
                                </StackPanel>
                            </StackPanel>
                            <Button Background="{x:Null}" DataContext="{Binding}" Style="{StaticResource FullButtonStyle}" HorizontalAlignment="Right" VerticalAlignment="Center" Click="AddCourseBtn_Clicked">
                                <Border CornerRadius="8" Height="30" Background="{Binding btncolor}">
                                    <TextBlock FontSize="12" Margin="10,3" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding btntext}"></TextBlock>
                                </Border>
                            </Button>
                        </Grid>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="LessionListStyle" TargetType="ListView">
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Foreground="Black" FontWeight="Bold" Text="{Binding}"></TextBlock>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid Background="White" Height="50" VerticalAlignment="Top">
            <AppBarButton Click="GoBackBtn_Clicked" Foreground="{ThemeResource Friday-Foreground}" Background="{x:Null}" VerticalAlignment="Stretch" Icon="Back"></AppBarButton>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Foreground="Black" HorizontalAlignment="Center">添加课程</TextBlock>
                <TextBlock Foreground="Black" FontSize="12" HorizontalAlignment="Center" x:Name="SchoolText"></TextBlock>
            </StackPanel>
            <Button Click="NewCourseBtn_Clicked" Foreground="{ThemeResource Friday-Foreground}" Background="{x:Null}" VerticalAlignment="Stretch" HorizontalAlignment="Right">新建课程</Button>
        </Grid>
        <Grid Margin="0,50,0,0" Background="{ThemeResource Friday-FrameBackground}">
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="25"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBox x:Name="SearchTextBox" Grid.Row="0" Margin="5" PlaceholderText="输入课程名称,可搜索并添加课程" Style="{StaticResource TextBoxStyle2}" BorderBrush="{x:Null}"></TextBox>
            <Button x:Name="FilderBtn" Margin="12" Padding="5,0" BorderThickness="0.5" BorderBrush="{ThemeResource Friday-BorderBrush}" Grid.Row="0" VerticalAlignment="Stretch" Background="#7F10C6D8" Click="FilderBtn_Clicked">
                <TextBlock FontSize="12" Foreground="#FF10427E" Text="{x:Bind FilderText}"></TextBlock>
            </Button>
            <Grid Grid.Row="1" BorderBrush="{ThemeResource Friday-BorderBrush}" BorderThickness="0,0.5,0,0.5" Background="#FFFFC46E">
                <TextBlock Margin="5" FontSize="12" VerticalAlignment="Center" Foreground="#FF89632C">以下是 <Run x:Name="TermText" FontWeight="Bold"></Run> 的课程</TextBlock>
            </Grid>
            <ScrollViewer Grid.Row="2" Background="White" ViewChanged="LoadNextPage">
                <ListView x:Name="CourseList" SelectionMode="Single" SelectedIndex="-1" SelectionChanged="CourseList_SelectionChanged">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="Padding" Value="0"></Setter>
                            <Setter Property="Margin" Value="10,0"></Setter>
                            <Setter Property="BorderBrush" Value="{ThemeResource Friday-BorderBrush}"></Setter>
                            <Setter Property="BorderThickness" Value="0,0,0,0.5"></Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </ScrollViewer>
        </Grid>
        <ProgressRing x:Name="LoadProgress" Width="50" Height="50" IsActive="False"></ProgressRing>
    </Grid>
</Page>
